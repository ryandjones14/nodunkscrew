extends layout

block content
  div.add-member
    button.btn.btn-link.pull-right
      a(href='/add') add crew member
  if isFiltered
    div.reset-members
      button.btn.btn-link.pull-right
        a(href='/') reset filter
  div.members
    h4 members of the army: #{count}
    div.columns
      each member in members
        div.column.col-12
          div.card
            div.card-image
              img(src=`https://restcountries.eu/data/${member.country.toLowerCase()}.svg` class="img-responsive flag")
            div.card-header
              div.card-title.h5= member.name
              div.card-subtitle.text-gray.twitter-handle
                a(href=`https://twitter.com/${member.twitterHandle}` target="_blank")= member.twitterHandle
            div.card-body
              div
                span.location.city= member.city
                span.location.state= member.state
                div.country
                  a(href=`/country/${member.country}` class="label label-rounded label-primary")= member.country
